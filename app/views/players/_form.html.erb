<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ml-4 mb-4">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://images.pexels.com/photos/45201/kitty-cat-kitten-pet-45201.jpeg?cs=srgb&dl=animal-pet-cute-kitten-45201.jpg&fm=jpg" alt="">
    </div>

    <div class="mt-2">
      <button type="button" class="btn btn-dark btn-sm">Change Picture</button>
      <button type="button" class="btn btn-dark btn-sm">Snap</button>
    </div>
  </div>

  <div class="form-group col-6">
    <%= form.label :pob, "Place of Birth" %>
    <%= form.text_field :pob, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.label :height %>
    <%= form.text_field :height, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.label :citizenship %>
    <%= form.text_field :citizenship, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.label :position %>
    <%= form.text_field :position, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.label :foot %>
    <%= form.text_field :foot, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.label :current_club %>
    <%= form.text_field :current_club, class: "form-control" %>
  </div>

  <div class="form-group col-6">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
